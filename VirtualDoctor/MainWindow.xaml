<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:VirtualDoctor"
    xmlns:core="clr-namespace:System;assembly=mscorlib"
    mc:Ignorable="d" x:Class="VirtualDoctor.MainWindow"
    
    Title="Virtual Doctor - Administration Panel" Height="565.589" Width="1024.049" Loaded="Window_Loaded">
    <Window.Resources>
        <CollectionViewSource  x:Key="symptomCathegoryViewSource" d:DesignSource="{d:DesignInstance {x:Type local:SymptomCathegory}, CreateList=True}"/>
        <CollectionViewSource x:Key="symptomCathegoriesList" d:DesignSource="{d:DesignInstance {x:Type core:String}, CreateList=True}"/>
        <!--        <local: x:Key="validator"  />-->
    </Window.Resources>

    <Grid>
        <Label x:Name="Label1" Content="" HorizontalAlignment="Left" Margin="106,46,0,0" VerticalAlignment="Top" Width="132"/>
        <TabControl HorizontalAlignment="Left" Height="486" Margin="25,29,0,0" VerticalAlignment="Top" Width="727">
            <TabItem Header="Symptom cathegories">
                <Grid Background="#FFE5E5E5" Margin="2,0,-2,0" DataContext="{StaticResource symptomCathegoryViewSource}" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <DataGrid  x:Name="SymptomCathegoriesDataGrid" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Height="329" Width="426" ItemsSource="{Binding}" AutoGenerateColumns="False" EnableRowVirtualization="True" RowEditEnding="SymptomCathegoryRowUpdate">

                        <DataGrid.RowValidationErrorTemplate>
                            <ControlTemplate>
                                <Grid Margin="0,-2,0,-2"
                                    ToolTip="{Binding RelativeSource={RelativeSource
                                    FindAncestor, AncestorType={x:Type DataGridRow}},
                                    Path=(Validation.Errors)[0].ErrorContent}">
                                    <Ellipse StrokeThickness="0" Fill="Red" 
                                     Width="{TemplateBinding FontSize}" 
                                    Height="{TemplateBinding FontSize}" />
                                    <TextBlock Text="!" FontSize="{TemplateBinding FontSize}" 
                                    FontWeight="Bold" Foreground="White" 
                                    HorizontalAlignment="Center"  />
                                </Grid>
                            </ControlTemplate>
                        </DataGrid.RowValidationErrorTemplate>

                        <DataGrid.RowValidationRules>
                            <local:SymptomCathegoryValidation ValidationStep="UpdatedValue" />

                        </DataGrid.RowValidationRules>

                        <DataGrid.Columns>
                            <DataGridTextColumn x:Name="IdColumn"  Binding="{Binding Id }"
                                                Header="Id:" Width="1*"/>
                            <DataGridTextColumn x:Name="NameColumn" Binding="{Binding Name }" Header="Name:" Width="4*" />

                            <DataGridComboBoxColumn x:Name="CathegoryParentColumn" 
                                SelectedValueBinding="{Binding ParentCathegory}"
                                SelectedValuePath="Id"
                                DisplayMemberPath="Name"
                               
                                ItemsSource="{Binding Source={StaticResource symptomCathegoriesList}}"
                                Header="Cathegory parent:" Width="4*">

                                <DataGridComboBoxColumn.EditingElementStyle>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="IsEditable" Value="True" />
                                    </Style>
                                </DataGridComboBoxColumn.EditingElementStyle>

                            </DataGridComboBoxColumn>

                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBox x:Name="SymptomCathegoriesSearchBox" HorizontalAlignment="Left" Height="23" Margin="70,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="179" TextChanged="SymptomCathegoriesSearchBox_TextChanged"/>
                    <Label Content="Search:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>

                </Grid>
            </TabItem>
            <TabItem Header="Symptoms">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Diseases" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Disease corelation" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Symptom - disease connection" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>


</Window>
    
    
